<html>
    <head>
        <style>
            /*button*/

            #button {
              width: 20%;
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            #button:hover {background-color: #222}

            #button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }

            /* forms */

            input, textarea, select, .uneditable-input {
                border: 1px solid #bbb;
                width: 100%;
                margin-bottom: 15px;
                @include box_sizing;
            }

            input {
                height: auto !important;
            }

            /*fields*/

            .personal_field {
                background-color: #999;
                width: 100%;
                padding: 6px 10px;
                margin: 8px 0;
                box-sizing: border-box;
                border: 1px solid #555;
                outline: none;
            }
            .personal_field:focus {
                background-color: #777;
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <% provide(:title, 'Exam') %>
        <div style="background-color: #90ABF6;">
            <div style="text-align: center;">
                <h1>Exam</h1>
                <br>
                <h3>Name: <%= current_user.name %></h3>
                <h3>Surame: <%= current_user.surname %></h3>
                <h3>Birth day: <%= current_user.birthDay.to_s %></h3>
                <h3>Fiscal code: <%= current_user.fiscalCode.upcase %></h3>
            </div>

            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <%= form_for(:pretest_and_exam_quiz, url: examDone_path) do |f| %>
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 20%;">
                                </td>
                                <td style="width: 60%;">
                                    <table style="width:100%;" cellpadding="10"  >
                                        <% 10.times do |n| %>
                                            <tr>
                                                <td colspan="2">
                                                    <%= PretestAndExamQuiz.find(2).send("text#{n+1}") %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50px;">
                                                    <%= radio_button_tag("answer#{n+1}".to_sym, "1") %>
                                                </td>
                                                <td>
                                                    <%= label_tag(:age_child, PretestAndExamQuiz.find(2).send("ans#{n+1}_1")) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50px;">
                                                    <%= radio_button_tag("answer#{n+1}".to_sym, "2") %>
                                                </td>
                                                <td>
                                                    <%= label_tag(:age_child, PretestAndExamQuiz.find(2).send("ans#{n+1}_2")) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50px;">
                                                    <%= radio_button_tag("answer#{n+1}".to_sym, "3") %>
                                                </td>
                                                <td>
                                                    <%= label_tag(:age_child, PretestAndExamQuiz.find(2).send("ans#{n+1}_3")) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50px;">
                                                    <%= radio_button_tag("answer#{n+1}".to_sym, "4") %>
                                                </td>
                                                <td>
                                                    <%= label_tag(:age_child, PretestAndExamQuiz.find(2).send("ans#{n+1}_4")) %>
                                                </td>
                                            </tr>
                                            <tr> <td colspan="2"></td> </tr>
                                        <% end %>
                                    </table>
                                </td>
                                <td style="width: 20%;">
                                </td>
                            </tr>
                        </table>

                        <div style="text-align: center;">
                            <%= f.submit "Done", class: "btn btn-primary", id: "button" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
