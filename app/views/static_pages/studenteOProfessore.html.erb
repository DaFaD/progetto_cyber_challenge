                <td style="text-align:center;">
                    <%= button_to "Click Here", signupProfessore_path, method: :get, :class => "button" %>
                </td>
            </tr>
            <tr>
                <td>
                    <h1 style="text-align:center;">
                        OR
                    </h1>
                </td>
            </tr>
            <tr>
                <td style="text-align:center;">
                    <h2>
                        Do you want sign in as an administrator?
                    </h2>
                </td>
            </tr>
