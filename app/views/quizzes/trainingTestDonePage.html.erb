<html>
    <head>
        <style>
            /*button*/

            .button {
              width: 25%;
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            .button:hover {background-color: #222}

            .button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <table style="width:100%;">
            <tr>
                <td style="width:10%;">
                </td>
                <td style="width:80%;">
                    <table style="width: 100%;" cellpadding="10" >
                        <tr>
                            <td colspan="2" style="text-align: center;">
                                <%= button_to "Return to training page", trainingPage_path, method: :get, :class => "button" %>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align:center;">
                                <h1>Your score is: <%= @punteggio %> </h1>
                            </td>
                        </tr>
                        <%10.times do |n| %>
                            <tr>
                                <td style="width: 20%;">    <h2>Question:</h2>   </td>
                                <td  style="width: 80%;">    <h2> <%= Question.find(@domande[n].to_i).text %> </h2>   </td>
                            </tr>
                            <tr>
                                <td style="width: 20%;">    <h3>Correct Answer:</h3>   </td>
                                <td  style="width: 80%;">    <h3> <%= Question.find(@domande[n].to_i).send("ans#{Question.find(@domande[n].to_i).ans_ok}") %> </h3> </td>
                            </tr>
                            <tr>
                                <td style="width: 20%;">    <h3>Your Answer:</h3>   </td>
                                <% if @risposteUtente[n] != nil %>
                                    <td  style="width: 80%;">    <h3> <%= Question.find(@domande[n].to_i).send("ans#{@risposteUtente[n]}") %> </h3> </td>
                                <% else %>
                                    <td  style="width: 80%;">    <h3> No user answer </h3> </td>
                                <% end %>
                            </tr>
                            <tr>
                                <td colspan="2">
                                </td>
                            </tr>
                        <%end%>

                        <tr>
                            <td colspan="2" style="text-align: center;">
                                <%= button_to "Return to training page", trainingPage_path, method: :get, :class => "button" %>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="width:10%;">
                </td>
            </tr>
        </table>
    </body>
</html>
