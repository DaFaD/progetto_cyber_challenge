<table style="width: 100%;" cellpadding="10" >
    <tr>
        <td colspan="2" style="text-align:center;">
            <h1>Your score is: <%= @punteggio %> </h1>
        </td>
    <%10.times do |n| %>
        <tr>
            <td style="width: 20%;">    <h2>Question:</h2>   </td>
            <td  style="width: 80%;">    <h2> <%= Question.find(@domande[n].to_i).text %> </h2>   </td>
        </tr>
        <tr>
            <td style="width: 20%;">    <h3>Correct Answer:</h3>   </td>
            <td  style="width: 80%;">    <h3> <%= Question.find(@domande[n].to_i).send("ans#{Question.find(@domande[n].to_i).ans_ok}") %> </h3> </td>
        </tr>
        <tr>
            <td style="width: 20%;">    <h3>Your Answer:</h3>   </td>
            <% if @risposteUtente[n] != nil %>
                <td  style="width: 80%;">    <h3> <%= Question.find(@domande[n].to_i).send("ans#{@risposteUtente[n]}") %> </h3> </td>
            <% else %>
                <td  style="width: 80%;">    <h3> No user answer </h3> </td>
            <% end %>
        </tr>
        <tr>
            <td colspan="2">
            </td>
        </tr>
    <%end%>


</table>
