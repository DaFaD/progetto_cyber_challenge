<html>
    <head>
        <style>
            /*button*/

            #button {
              width: 20%;
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            #button:hover {background-color: #222}

            #button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }

            /* forms */

            input, textarea, select, .uneditable-input {
                border: 1px solid #bbb;
                width: 100%;
                margin-bottom: 15px;
                @include box_sizing;
            }

            input {
                height: auto !important;
            }

            /*fields*/

            .personal_field {
                background-color: #999;
                width: 100%;
                padding: 6px 10px;
                margin: 8px 0;
                box-sizing: border-box;
                border: 1px solid #555;
                outline: none;
            }
            .personal_field:focus {
                background-color: #777;
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <% provide(:title, 'Test') %>
        <div style="text-align: center;">
            <h1>Test</h1>
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <%= form_for(:quiz, url: trainingTestDone_path) do |f| %>
                    <%= hidden_field_tag :question0, @questions[0].id %>
                    <%= hidden_field_tag :question1, @questions[1].id %>
                    <%= hidden_field_tag :question2, @questions[2].id %>
                    <%= hidden_field_tag :question3, @questions[3].id %>
                    <%= hidden_field_tag :question4, @questions[4].id %>
                    <%= hidden_field_tag :question5, @questions[5].id %>
                    <%= hidden_field_tag :question6, @questions[6].id %>
                    <%= hidden_field_tag :question7, @questions[7].id %>
                    <%= hidden_field_tag :question8, @questions[8].id %>
                    <%= hidden_field_tag :question9, @questions[9].id %>
                    <table style="width: 100%;">
                        <tr>
                            <td style="width: 20%;">
                            </td>
                            <td style="width: 60%;">
                                <table style="width:100%;" cellpadding="10"  >
                                    <% 10.times do |k| %>
                                        <tr>
                                            <td colspan="2">
                                                <%= @questions[k].text %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 50px;">
                                                <%= radio_button_tag("answer#{k}".to_sym, "1") %>
                                            </td>
                                            <td>
                                                <%= label_tag(:age_child, @questions[k].ans1) %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 50px;">
                                                <%= radio_button_tag("answer#{k}".to_sym, "2") %>
                                            </td>
                                            <td>
                                                <%= label_tag(:age_child, @questions[k].ans2) %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 50px;">
                                                <%= radio_button_tag("answer#{k}".to_sym, "3") %>
                                            </td>
                                            <td>
                                                <%= label_tag(:age_child, @questions[k].ans3) %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 50px;">
                                                <%= radio_button_tag("answer#{k}".to_sym, "4") %>
                                            </td>
                                            <td>
                                                <%= label_tag(:age_child, @questions[k].ans4) %>
                                            </td>
                                        </tr>
                                        <tr> <td colspan="2"></td> </tr>
                                    <% end %>
                                </table>
                            </td>
                            <td style="width: 20%;">
                            </td>
                        </tr>
                    </table>

                    <div style="text-align: center;">
                        <%= f.submit "Done", class: "btn btn-primary", id: "button" %>
                    </div>
                <% end %>
            </div>
        </div>
    </body>
</html>
