<table style="width:100%;" cellpadding="10">
    <tr>
        <td colspan="2" style="text-align: center;">
            <h1>All students that trained in <%= @year %></h1>
        </td>
    </tr>
            
    <tr>
        <th style="text-align: right; width:55%;">
            Student
        </th>
        <th style="text-align: left; width:45%;">
            Average
        </th>
    </tr>
            
    <% @users.each do |user| %>
        <tr>
            <td style="text-align: right; width:55%;">
                <%= user.username %>
            </td>
            <td style="text-align: left; width:45%;">
                <%= TrainingAverage.find_by(id_user: user.id, year: @year).my_average.to_s[0,6] %>
            </td>
        </tr>
    <% end %>
</table>
