<table style="width:100%;" cellpadding="10">
    <tr>
        <td style="text-align: center;">
            <h1>All winners of <%= @year %></h1>
        </td>
    </tr>
    
    <tr>
        <td style="text-align: center;">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <%= form_for(:classification, url: editWinners_path) do |f| %>
                        <%= hidden_field_tag :year, @year %>
                            
                        <%= f.submit "Edit winners", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </td>
    </tr>
            
    <tr>
        <th style="text-align: center;">
            Winner
        </th>
    </tr>
            
    <% @users.each do |user| %>
        <tr>
            <td style="text-align: center;">
                <%= user.username %>
            </td>
        </tr>
    <% end %>
</table>
