<html>
    <head>
        <style>
            /*button*/

            .button {
              width: 10%;
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            .button:hover {background-color: #222}

            .button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }

            /* forms */

            input, textarea, select, .uneditable-input {
                border: 1px solid #bbb;
                width: 100%;
                margin-bottom: 15px;
                @include box_sizing;
            }

            input {
                height: auto !important;
            }

            /*fields*/

            .personal_field {
                background-color: #999;
                width: 100%;
                padding: 6px 10px;
                margin: 8px 0;
                box-sizing: border-box;
                border: 1px solid #555;
                outline: none;
            }
            .personal_field:focus {
                background-color: #777;
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <br><br><br>
        <div style="text-align: center;">
            <h1>Select the year you are refering to:</h1>
            <br><br>
            <% CompetitionSubscribed.select("year").distinct.order("year").each do |y| %>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <%= form_for(:classification, url: partecipantsClassification_path) do |f| %>
                            <%= hidden_field_tag :year, y.year %>
                            
                            <div style="text-align: center;">
                                <%= f.submit y.year.to_s, class: "button btn btn-primary" %>
                            </div>
                        <% end %>
                    </div>
                </div>
                <br>
            <% end %>
        </div>
    </body>
</html>
