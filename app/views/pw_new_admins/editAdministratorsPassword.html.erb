<html>
    <head>
        <style>
            /*button*/
            
            #button {
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            #button:hover {background-color: #222}

            #button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }
            
            /* forms */
            
            input, textarea, select, .uneditable-input {
                border: 1px solid #bbb;
                width: 100%;
                margin-bottom: 15px;
                @include box_sizing;
            }
            
            input {
                height: auto !important;
            }
            
            /*fields*/
            
            .personal_field {
                background-color: #999;
                width: 100%;
                padding: 6px 10px;
                margin: 8px 0;
                box-sizing: border-box;
                border: 1px solid #555;
                outline: none;
            }
            .personal_field:focus {
                background-color: #777;
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <table style="width:100%;">
            <tr>
                <td style="width:33%;">
                </td>
                <td style="width:34%; text-align:center;">
                    <% provide(:title, 'Change administrators password') %>
                    <h1>Change administrators password</h1>
                    <br><br>
                    <h3>Change the necessary password used to create new administrator accounts</h3>
                    <br>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <%= form_for(:pw_new_admin, url: changeAdministratorsPassword_path) do |f| %>
                            
                                <h3><%= f.label :oldpassword, "Insert the actual Administrators' password" %></h3>
                                <%= f.password_field :oldpassword , class: "personal_field form-control", placeholder: "The actual password..." %>
                                
                                <h3><%= f.label :newpassword, "Insert the new Administrators' password" %></h3>
                                <%= f.password_field :newpassword , class: "personal_field form-control", placeholder: "The new password..." %>
                                
                                <h3><%= f.label :confirmnewpassword, "Confirm the new Administrators' password" %></h3>
                                <%= f.password_field :confirmnewpassword , class: "personal_field form-control", placeholder: "The new password confirmation..." %>
                                
                                <%= f.submit "Change", class: "btn btn-primary", id: "button" %>
                            <% end %>
                        </div>
                    </div>
                </td>
                <td style="width:33%;">
                </td>
            </tr>
        </table>
    </body>
</html>
