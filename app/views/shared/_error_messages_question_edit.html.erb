<% if Question.find(params[:id]).errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            The form contains <%= pluralize(Question.find(params[:id]).errors.count, "error") %>.
        </div>
        <ul>
        <% Question.find(params[:id]).errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>
