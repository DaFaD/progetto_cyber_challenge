<html>
    <head>
        <style>
            /*button*/
            
            #button {
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            #button:hover {background-color: #222}

            #button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }
            
            /* forms */
            
            input, textarea, select, .uneditable-input {
                border: 1px solid #bbb;
                width: 100%;
                margin-bottom: 15px;
                @include box_sizing;
            }
            
            input {
                height: auto !important;
            }
            
            /*fields*/
            
            .personal_field {
                background-color: #999;
                width: 100%;
                padding: 6px 10px;
                margin: 8px 0;
                box-sizing: border-box;
                border: 1px solid #555;
                outline: none;
            }
            .personal_field:focus {
                background-color: #777;
            }
        </style>
    </head>
    <body style="background-color: #B34154;">
        <table style="width:100%;">
            <tr>
                <td style="width:33%;">
                </td>
                <td style="width:34%; text-align:center;">
                    <% provide(:title, 'Log in') %>
                    <h1>Log in</h1>

                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <%= form_for(:session, url: login_path) do |f| %>
                            
                                <h3><%= f.label :email %></h3>
                                <%= f.email_field :email , class: "personal_field form-control", placeholder: "Your e-mail..." %>
                                
                                <h3><%= f.label :password %></h3>
                                <%= f.password_field :password , class: "personal_field form-control", placeholder: "Your password..." %>
                                
                                <h3>Select your account type:</h3>
                                
                                <table style="width:100%;">
                                    <tr>
                                        <td style="width:33%">
                                            <%= radio_button_tag(:userTypeField, "UserStudente") %>
                                            <%= label_tag(:age_child, "I am a student") %>
                                        </td>
                                        <td style="width:34%">
                                            <%= radio_button_tag(:userTypeField, "UserProfessore") %>
                                            <%= label_tag(:age_adult, "I am a professor") %>
                                        </td>
                                        <td style="width:33%">
                                            <%= radio_button_tag(:userTypeField, "UserAdmin") %>
                                            <%= label_tag(:age_adult, "I am an administrator") %>
                                        </td>
                                    </tr>
                                </table>
                                
                                <br><br><br>
                                
                                <%= f.label :remember_me, class: "checkbox inline" do %>
                                    <%= f.check_box :remember_me %>
                                    <span>Remember me on this computer</span>
                                <% end %>
                                
                                <%= f.submit "Log in", class: "btn btn-primary", id: "button" %>
                            <% end %>
                            
                            <p>New user? <%= link_to "Sign up now!", studenteOProfessore_path %></p>
                        </div>
                    </div>
                </td>
                <td style="width:33%;">
                </td>
            </tr>
        </table>
    </body>
</html>
