<html>
    <head>
        <style>
            /*button*/
            
            .button {
              display: inline-block;
              padding: 15px 25px;
              font-size: 24px;
              cursor: pointer;
              text-align: center;
              text-decoration: none;
              outline: none;
              color: #fff;
              background-color: #333;
              border: none;
              border-radius: 15px;
              box-shadow: 0 9px #999;
            }

            .button:hover {background-color: #222}

            .button:active {
              background-color: #222;
              box-shadow: 0 5px #666;
              transform: translateY(4px);
            }
        </style>
    </head>
    <body>
        <div style="text-align: center;">
            <br><br><br>
            <% if SurveyActivation.first.activated == true %>
                <h2>Survey is actually enabled</h2>
            <% end %>
            <% if SurveyActivation.first.activated == false %>
                <h2>Survey is actually disabled</h2>
            <% end %>
            <br><br>
            <%= button_to "Switch", activeSurvey_path, method: :get, :class => "button" %>
            <br><br><br>
        </div>
    </body>
</html>
